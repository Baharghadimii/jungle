  <section class="cart-show">
  <header class="page-header">
 <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Orders</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order_product.each do |item| %>
                <% @line_item.each do |line| %>
                <% if line[:product_id] == item[:id]%>
                  <%= render 'line_item', product: item, line: line %>
                 <%end%>
          <% end %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order[:total_cents] / 100.0 %>
          </th>
        </tr>
         <tr>
          <th colspan="2">
            Ordered by: <%= @order[:email] %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
</section>
